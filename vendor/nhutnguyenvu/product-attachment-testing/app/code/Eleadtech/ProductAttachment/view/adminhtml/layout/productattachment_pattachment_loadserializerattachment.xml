<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root" label="Root">
        <block class="Eleadtech\ProductAttachment\Block\Adminhtml\ProductAttachment\Edit\Grid" name="eleadtech.productattchment.edit.grid.products"/>
        <block class="Magento\Backend\Block\Template" name="js_grid_products" template="Eleadtech_ProductAttachment::productattachment/js_grid_products.phtml"/>
        <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="product_grid_serializer">
            <arguments>
                <argument name="grid_block" xsi:type="string">eleadtech.productattchment.edit.grid.products</argument>
                <argument name="callback" xsi:type="string">getAttachmentProducts</argument>
                <argument name="input_element_name" xsi:type="string">attachment</argument>
                <argument name="reload_param_name" xsi:type="string">attachment_products</argument>
            </arguments>
        </block>
    </container>
</layout>
